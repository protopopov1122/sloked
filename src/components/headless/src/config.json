{
    "configurationServer": {
        "host": "127.0.0.1",
        "port": 4567
    },
    "containers": {
        "main": {
            "network": {
                "buffering": 5,
                "compression": true
            },
            "server": {
                "netServer": {
                    "host": "127.0.0.1",
                    "port": 1234
                },
                "restrictAccess": {
                    "content": [
                        "/document",
                        "/namespace",
                        "/screen",
                        "/editor",
                        "/plugins"
                    ],
                    "whitelist": true
                },
                "restrictModification": {
                    "content": [
                        "/document",
                        "/namespace",
                        "/screen",
                        "/editor",
                        "/plugins"
                    ],
                    "whitelist": true
                },
                "services": {
                    "endpoints": [
                        "/document/render",
                        "/document/cursor",
                        "/document/manager",
                        "/document/notify",
                        "/document/search",
                        "/namespace/root",
                        "/editor/shutdown",
                        "/editor/authorization"
                    ],
                    "root": "file:///"
                }
            }
        },
        "secondary": {
            "network": {
                "buffering": 5,
                "compression": true
            },
            "server": {
                "screen": {
                    "uri": "null:",
                    "tabWidth": 2
                },
                "slave": {
                    "address": {
                        "host": "localhost",
                        "port": 1234
                    }
                }
            }
        }
    }
}